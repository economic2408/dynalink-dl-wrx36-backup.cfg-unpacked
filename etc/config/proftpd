config 'global'
	option 'enable' '0'
	option 'ServerName' 'ProFTPD On OpenWRT'
	option 'ServerType' 'standalone'
	option 'DefaultServer' 'on'
	option 'RequireValidShell' 'no'
	option 'Port' '21'
	option 'UseIPv6' 'off'
	option 'Umask' '022'
	option 'MaxInstances' '20'
	option 'AllowOverwrite' 'on'
	option 'AllowStoreRestart' 'on'
	option 'ServerIdent' 'off'
	option 'PassivePorts'   '49152 65534'
	option 'User' 'ftp'
	option 'Group' 'ftp'
	option 'DefaultRoot' '/mnt/'
	option 'share_folder_num' '30'
	option 'outaccenable' '0'
	option 'outaccport' '8021'
	option 'advanced_config'    '0'
	option 'AllowAnonLogin' '1'
	option 'DefaultTransferMode' 'binary'
	option 'UseEncoding' 'on'

